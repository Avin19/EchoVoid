.pulse-root {
    position: absolute;
    bottom: 60px;
    right: 60px;
    width: 200px;
    height: 200px;
    justify-content: center;
    align-items: center;
}

.pulse-button {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    border-width: 3px;
    border-color: rgba(0,255,255,0.8);
    border-style: solid;
    background-color: rgba(0,255,255,0.1);
    color: white;
    font-size: 22px;
}
